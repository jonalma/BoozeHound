<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#93C3EB"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="44dp"
        android:src="@drawable/skyline2" />
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/bhheader" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Boozey&apos;s Favorite Quotes"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/textView1"
        android:src="@drawable/yis" />

    <EditText
        android:id="@+id/quote1text"
        android:layout_width="310dp"
        android:layout_height="110dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/quote2text"
        android:layout_width="310dp"
        android:layout_height="110dp"
        android:layout_alignLeft="@+id/quote1text"
        android:layout_below="@+id/quote1text"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/refresh"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quote2text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Sniff Out More Quotes!" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/quote1text"
        android:layout_marginBottom="46dp"
        android:layout_marginLeft="32dp"
        android:src="@drawable/beer2" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignRight="@+id/quote1text"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginRight="34dp"
        android:src="@drawable/beer2" />

</RelativeLayout>
